<div class="row">
  <div class="col-med-8">
  	<div> class="media">
  	  <% if @user.avatar? %>
  	    <div class="media=left">
  	      <%= image_tag @user.avatar.url, class: 'media-object' %>
  	  </div>
  	  <% end %>
  	  <div class="media-body">
  	  	<h2 class="media-heading"><%= @user.name %></h2>
  	  	<small>
  	  	  <%= pluralize(@user.posts.count, 'post') %>,
  	  	  <%= pluralize(@user.comments.count, 'comment') %>
  	  	</small>
  	  </div>
  	</div>
  </div>
</div>
<h1>Posts</h2>

<%= render @posts %>

<h2>Comments</h2>
<%= render @comments %>